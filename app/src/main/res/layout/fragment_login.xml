<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2fffb"
    tools:context=".auth.LoginFragment">



  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">



          <androidx.cardview.widget.CardView
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="@dimen/_30sdp"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginRight="@dimen/_10sdp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">



                  <ImageView
                      android:id="@+id/imgLogo"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:layout_marginTop="@dimen/_20sdp"
                      android:background="@drawable/logo_data"
                      android:layout_width="@dimen/_100sdp"
                      android:layout_height="@dimen/_100sdp">
                  </ImageView>



                  <TextView
                      android:id="@+id/txtPolution"
                      app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:textSize="@dimen/_17sdp"
                      android:textColor="#474255"
                      android:layout_marginTop="@dimen/_15sdp"
                      android:text="@string/u_p_pollution_control_boards"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                  </TextView>


                  <TextView
                      android:id="@+id/txtLab"
                      app:layout_constraintTop_toBottomOf="@+id/txtPolution"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:textSize="@dimen/_13sdp"
                      android:textColor="#03b99f"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:text="@string/lab_management_system_l_m_s"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                  </TextView>


                  <TextView
                      app:layout_constraintLeft_toLeftOf="@id/edUser"
                      android:text="@string/login_as"
                      android:textSize="@dimen/_12sdp"
                      android:textColor="@color/black"
                      android:layout_marginBottom="@dimen/_5sdp"
                      app:layout_constraintBottom_toTopOf="@+id/c"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                  </TextView>

                  <androidx.cardview.widget.CardView
                      android:id="@+id/c"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_37sdp"
                      android:layout_marginLeft="@dimen/_30sdp"
                      android:layout_marginTop="@dimen/_40sdp"
                      android:background="@drawable/cornor_redios"
                      android:layout_marginRight="@dimen/_30sdp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toBottomOf="@id/txtLab">

                      <androidx.constraintlayout.widget.ConstraintLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          >

                          <com.jaredrummler.materialspinner.MaterialSpinner
                              android:id="@+id/spinner"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_marginLeft="5sp"
                              android:layout_marginTop="2sp"
                              android:layout_marginRight="@dimen/_5sdp"
                              android:layout_marginBottom="@dimen/_2sdp"
                              android:textSize="@dimen/_10sdp"
                              android:background="@drawable/cornor_redios"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintRight_toRightOf="parent"
                              app:layout_constraintTop_toTopOf="parent"
                              />

                      </androidx.constraintlayout.widget.ConstraintLayout>

                  </androidx.cardview.widget.CardView>



                  <TextView
                      app:layout_constraintLeft_toLeftOf="@id/edUser"
                      android:text="@string/user_number"
                      android:textSize="@dimen/_12sdp"
                      android:textColor="@color/black"
                      android:layout_marginBottom="@dimen/_5sdp"
                      app:layout_constraintBottom_toTopOf="@+id/edUser"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                  </TextView>


                  <EditText
                      android:id="@+id/edUser"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_35sdp"
                      android:layout_marginLeft="@dimen/_30sdp"
                      android:layout_marginTop="@dimen/_30sdp"
                      android:layout_marginRight="@dimen/_30sdp"
                      android:layout_marginBottom="@dimen/_50sdp"
                      android:background="@drawable/cornor_redios"
                      android:hint="Mobile Number"
                      android:maxLength="10"
                      android:imeOptions="actionNext"
                      android:inputType="number"
                      android:paddingLeft="@dimen/_10sdp"
                      app:layout_constraintTop_toBottomOf="@id/c" />



                  <TextView
                      app:layout_constraintLeft_toLeftOf="@id/edPass"
                      android:text="@string/user_number"
                      android:textSize="@dimen/_12sdp"
                      android:textColor="@color/black"
                      app:layout_constraintBottom_toTopOf="@id/edPass"
                      android:layout_width="wrap_content"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:layout_height="wrap_content">

                  </TextView>



                  <EditText
                      android:id="@+id/edPass"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_35sdp"
                      android:layout_marginLeft="@dimen/_30sdp"
                      android:layout_marginTop="@dimen/_30sdp"
                      android:layout_marginRight="@dimen/_30sdp"
                      android:background="@drawable/cornor_redios"
                      android:hint="Password"
                      android:imeOptions="actionDone"
                      android:inputType="textPassword"
                      android:paddingLeft="@dimen/_10sdp"
                      app:layout_constraintTop_toBottomOf="@id/edUser" />


                  <Button
                      android:id="@+id/button"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/_50sdp"
                      android:layout_marginTop="@dimen/_30sdp"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:layout_marginBottom="@dimen/_10sdp"
                      android:layout_marginRight="@dimen/_50sdp"
                      android:background="#dc3545"
                      android:text="Login"
                      android:textColor="#ffffff"
                      app:layout_constraintTop_toBottomOf="@+id/edPass"
                      tools:layout_editor_absoluteX="28dp" />




              </androidx.constraintlayout.widget.ConstraintLayout>
          </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>




